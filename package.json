{
  "name": "common-evolution",
  "version": "1.0.0",
  "private": true,
  "description": "Common-Evolution with @covalent and @angular packages",
  "keywords": [
    "angular",
    "components",
    "reusable"
  ],
  "scripts": {
    "start": "ng serve --port 4213",
    "start-lm": "ng serve --host 158.183.134.132 --port 80",
    "e2e": "ng e2e",
    "lint": "ng lint",
    "reinstall": "rm -rf node_modules tmp deploy dist && yarn install && npm rebuild node-sass",
    "reinstall:latest": "rm -rf node_modules tmp deploy dist && npm install",
    "postinstall": "webdriver-manager update",
    "start-api": "cd mock-api && node\\bin\\covalent-data.prg &",
    "stop-api": "pkill covalent-data",
    "webdriver-update": "bash ./node_modules/.bin/webdriver-manager update",
    "test": "ng test --code-coverage --single-run",
    "test:watch": "ng test --code-coverage",
    "ghpages-deploy": "ng build --base-href /common-evolution/ --aot -prod --sourcemap=false && bash scripts/ghpages-deploy"
  },
  "engines": {
    "node": ">6.12.0",
    "npm": ">3"
  },
  "repository": "https://github.com/CraigOuttenLMCO/common-evolution.git",
  "license": "MIT",
  "author": "Us",
  "contributors": [
    "Andrew <andrew@us.com>",
    "Craig <craig@us.com>"
  ],
  "dependencies": {
    "@angular/animations": "^5.2.9",
    "@angular/cdk": "^5.2.4",
    "@angular/common": "^5.2.9",
    "@angular/compiler": "^5.2.9",
    "@angular/core": "^5.2.9",
    "@angular/forms": "^5.2.9",
    "@angular/http": "^5.2.9",
    "@angular/material": "^5.2.4",
    "@angular/platform-browser": "^5.2.9",
    "@angular/platform-browser-dynamic": "^5.2.9",
    "@angular/platform-server": "^5.2.9",
    "@angular/router": "^5.2.9",
    "@covalent/core": "1.0.0",
    "@covalent/dynamic-forms": "1.0.0",
    "@covalent/highlight": "1.0.0",
    "@covalent/http": "1.0.0",
    "@covalent/markdown": "1.0.0",
    "@swimlane/ngx-charts": "^7.1.1",
    "chart.js": "^2.7.2",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.4.1",
    "d3": "^4.9.0",
    "hammerjs": "^2.0.8",
    "highlight.js": "9.10.0",
    "ng4-charts": "^1.0.2",
    "rxjs": "^5.5.7",
    "showdown": "1.6.4",
    "web-animations-js": "^2.3.1",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.6.8",
    "@angular/compiler-cli": "^5.2.9",
    "@types/hammerjs": "2.0.30",
    "@types/jasmine": "2.5.38",
    "@types/node": "^6.0.102",
    "@types/selenium-webdriver": "2.53.36",
    "codelyzer": "~4.0.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-remap-istanbul": "^0.6.0",
    "karma-spec-reporter": "^0.0.31",
    "phantomjs-prebuilt": "2.1.14",
    "protractor": "~5.1.0",
    "ts-node": "3.1.0",
    "tslint": "^5.2.0",
    "typescript": "~2.6.2"
